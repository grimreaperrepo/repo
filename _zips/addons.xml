<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.grimreaper" name="[B][COLOR white]GrimreaperS [ THEMES ONLY ] Wizard[/COLOR][/B]" version="2.0.5" provider-name="[B][COLOR white]Grimreaper[/COLOR][/B]">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.six" />
    <import addon="script.module.kodi-six" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Grimreaper Wizard</summary>
    <description lang="en">In this wizard you will find the latest Grimreaper [ ONLY NOT BUILDS ] Themes</description>
    <platform>all</platform>
    <assets>
				<icon>icon.png</icon>
				<fanart>fanart.jpg</fanart>
				<banner></banner>
				<clearlogo></clearlogo>
				<screenshot></screenshot>
		</assets>
  </extension>
</addon>

